<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="도"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:gravity="center" android:background="@android:color/holo_red_dark"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_do1_main" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_re_main"/>
    <TextView
            android:text="레"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/btn_re_main" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#FF5722"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="#FFFFFF"
            android:gravity="center" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btn_do1_main" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_mi_main"/>
    <TextView
            android:text="미"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/btn_mi_main" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="#FFFFFF"
            android:background="#D8FFC107" android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/btn_re_main" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_fa_main"/>
    <TextView
            android:text="파"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/btn_fa_main"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="40dp"
            android:textColor="#FFFFFF" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="#8BC34A" android:gravity="center" app:layout_constraintStart_toEndOf="@+id/btn_mi_main"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_sol_main"/>
    <TextView
            android:text="솔"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/btn_sol_main"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp" android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="#00BCD4"
            android:gravity="center" app:layout_constraintStart_toEndOf="@+id/btn_fa_main"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_la_main"/>
    <TextView
            android:text="라"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/btn_la_main" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="#3F51B5"
            android:gravity="center" android:textColor="#FFFFFF" app:layout_constraintStart_toEndOf="@+id/btn_sol_main"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_si_main"/>
    <TextView
            android:text="시"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/btn_si_main"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="64dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="#FFFFFF"
            android:gravity="center" android:background="#9C27B0" app:layout_constraintStart_toEndOf="@+id/btn_la_main"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_do2_main"/>
    <TextView
            android:text="도"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:id="@+id/btn_do2_main" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="#FFFFFF"
            android:background="#E90909" android:gravity="center" app:layout_constraintStart_toEndOf="@+id/btn_si_main"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>