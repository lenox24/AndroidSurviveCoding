<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/edt_height_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="키" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:id="@+id/edt_weight_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="몸무게" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_height_main" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <Button
            android:text="결과"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_result_main" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_weight_main" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>

</android.support.constraint.ConstraintLayout>